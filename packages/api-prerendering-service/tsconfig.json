{
  "extends": "../../tsconfig.json",
  "include": ["src"],
  "references": [
    { "path": "../error" },
    { "path": "../handler" },
    { "path": "../handler-args" },
    { "path": "../handler-client" },
    { "path": "../handler-db" },
    { "path": "../plugins" },
    { "path": "../db" },
    { "path": "../db-dynamodb" },
    { "path": "../handler-aws" }
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "@webiny/error/*": ["../error/src/*"],
      "@webiny/error": ["../error/src"],
      "@webiny/handler/*": ["../handler/src/*"],
      "@webiny/handler": ["../handler/src"],
      "@webiny/handler-args/*": ["../handler-args/src/*"],
      "@webiny/handler-args": ["../handler-args/src"],
      "@webiny/handler-client/*": ["../handler-client/src/*"],
      "@webiny/handler-client": ["../handler-client/src"],
      "@webiny/handler-db/*": ["../handler-db/src/*"],
      "@webiny/handler-db": ["../handler-db/src"],
      "@webiny/plugins/*": ["../plugins/src/*"],
      "@webiny/plugins": ["../plugins/src"],
      "@webiny/db/*": ["../db/src/*"],
      "@webiny/db": ["../db/src"],
      "@webiny/db-dynamodb/*": ["../db-dynamodb/src/*"],
      "@webiny/db-dynamodb": ["../db-dynamodb/src"],
      "@webiny/handler-aws/*": ["../handler-aws/src/*"],
      "@webiny/handler-aws": ["../handler-aws/src"]
    },
    "baseUrl": "."
  }
}
