{
  "extends": "../../tsconfig.json",
  "include": ["src"],
  "references": [{ "path": "../cli-plugin-scaffold" }, { "path": "../plugins" }],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "@webiny/cli-plugin-scaffold/*": ["../cli-plugin-scaffold/src/*"],
      "@webiny/cli-plugin-scaffold": ["../cli-plugin-scaffold/src"],
      "@webiny/plugins/*": ["../plugins/src/*"],
      "@webiny/plugins": ["../plugins/src"]
    },
    "baseUrl": "."
  }
}
