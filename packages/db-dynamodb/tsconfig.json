{
  "extends": "../../tsconfig.json",
  "include": ["src"],
  "references": [
    { "path": "../db" },
    { "path": "../error" },
    { "path": "../handler" },
    { "path": "../handler-db" },
    { "path": "../plugins" }
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "@webiny/db/*": ["../db/src/*"],
      "@webiny/db": ["../db/src"],
      "@webiny/error/*": ["../error/src/*"],
      "@webiny/error": ["../error/src"],
      "@webiny/handler/*": ["../handler/src/*"],
      "@webiny/handler": ["../handler/src"],
      "@webiny/handler-db/*": ["../handler-db/src/*"],
      "@webiny/handler-db": ["../handler-db/src"],
      "@webiny/plugins/*": ["../plugins/src/*"],
      "@webiny/plugins": ["../plugins/src"]
    },
    "baseUrl": "."
  }
}
