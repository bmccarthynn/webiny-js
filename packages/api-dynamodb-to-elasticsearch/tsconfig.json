{
  "extends": "../../tsconfig.json",
  "include": ["src"],
  "references": [
    { "path": "../api-elasticsearch" },
    { "path": "../error" },
    { "path": "../handler" }
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "@webiny/api-elasticsearch/*": ["../api-elasticsearch/src/*"],
      "@webiny/api-elasticsearch": ["../api-elasticsearch/src"],
      "@webiny/error/*": ["../error/src/*"],
      "@webiny/error": ["../error/src"],
      "@webiny/handler/*": ["../handler/src/*"],
      "@webiny/handler": ["../handler/src"]
    },
    "baseUrl": "."
  }
}
