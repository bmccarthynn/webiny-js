{
  "extends": "../../tsconfig.json",
  "include": ["src"],
  "references": [
    { "path": "../app" },
    { "path": "../app-page-builder" },
    { "path": "../validation" }
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "@webiny/app/*": ["../app/src/*"],
      "@webiny/app": ["../app/src"],
      "@webiny/app-page-builder/*": ["../app-page-builder/src/*"],
      "@webiny/app-page-builder": ["../app-page-builder/src"],
      "@webiny/validation/*": ["../validation/src/*"],
      "@webiny/validation": ["../validation/src"]
    },
    "baseUrl": "."
  }
}
