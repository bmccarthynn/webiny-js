{
  "extends": "../../tsconfig",
  "include": ["./src", "./__tests__"],
  "references": [
    {
      "path": "../handler"
    },
    {
      "path": "../handler-http"
    },
    {
      "path": "../plugins"
    }
  ],
  "compilerOptions": {
    "paths": {
      "~/*": ["./src/*"],
      "@webiny/handler/*": ["../handler/src/*"],
      "@webiny/handler": ["../handler/src"],
      "@webiny/handler-http/*": ["../handler-http/src/*"],
      "@webiny/handler-http": ["../handler-http/src"],
      "@webiny/plugins/*": ["../plugins/src/*"],
      "@webiny/plugins": ["../plugins/src"]
    },
    "baseUrl": "."
  }
}
