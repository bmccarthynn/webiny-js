{
  "extends": "../../tsconfig.json",
  "include": ["src"],
  "references": [
    { "path": "../error" },
    { "path": "../handler" },
    { "path": "../handler-http" },
    { "path": "../plugins" },
    { "path": "../handler-args" }
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "@webiny/error/*": ["../error/src/*"],
      "@webiny/error": ["../error/src"],
      "@webiny/handler/*": ["../handler/src/*"],
      "@webiny/handler": ["../handler/src"],
      "@webiny/handler-http/*": ["../handler-http/src/*"],
      "@webiny/handler-http": ["../handler-http/src"],
      "@webiny/plugins/*": ["../plugins/src/*"],
      "@webiny/plugins": ["../plugins/src"],
      "@webiny/handler-args/*": ["../handler-args/src/*"],
      "@webiny/handler-args": ["../handler-args/src"]
    },
    "baseUrl": "."
  }
}
