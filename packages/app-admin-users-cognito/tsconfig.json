{
  "extends": "../../tsconfig.json",
  "references": [
    {
      "path": "../app"
    },
    {
      "path": "../app-admin"
    },
    {
      "path": "../app-security"
    },
    {
      "path": "../app-cognito-essentials"
    },
    {
      "path": "../form"
    },
    {
      "path": "../plugins"
    },
    {
      "path": "../ui"
    },
    {
      "path": "../validation"
    }
  ],
  "compilerOptions": {
    "paths": {
      "~/*": ["./src/*"],
      "@webiny/app/*": ["../app/src/*"],
      "@webiny/app-admin/*": ["../app-admin/src/*"],
      "@webiny/form": ["../form/src"],
      "@webiny/app-security/*": ["../app-security/src/*"],
      "@webiny/app-security": ["../app-security/src"],
      "@webiny/app-cognito-essentials/*": ["../app-cognito-essentials/src/*"],
      "@webiny/app-cognito-essentials": ["../app-cognito-essentials/src"],
      "@webiny/plugins/*": ["../plugins/src/*"],
      "@webiny/plugins": ["../plugins/src"],
      "@webiny/ui/*": ["../ui/src/*"],
      "@webiny/validation": ["../validation/src"]
    },
    "baseUrl": "."
  }
}
